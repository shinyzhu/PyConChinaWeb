{
    "name": "@pyconchina/web",
    "version": "0.1.0",
    "description": "PyConChina Web",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shinyzhu/PyConChinaWeb.git"
    },
    "bugs": {
        "url": "https://github.com/shinyzhu/PyConChinaWeb/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "@nuintun/qrcode": "^3.0.1",
        "array-unique-proposal": "^0.3.1",
        "boot-cell": "^1.2.1",
        "bootstrap-icons": "^1.0.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.1",
        "classnames": "^2.2.6",
        "koajax": "^0.6.2",
        "lodash.debounce": "^4.0.8",
        "marked": "^1.2.2",
        "mobx": "^5.15.7",
        "mobx-web-cell": "^0.3.2",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.2"
    },
    "devDependencies": {
        "@octokit/types": "^5.5.0",
        "@types/classnames": "^2.2.10",
        "@types/lodash.debounce": "^4.0.6",
        "@types/marked": "^1.1.0",
        "@typescript-eslint/parser": "^4.5.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.12.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "less": "^3.12.2",
        "lint-staged": "^10.4.2",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
